{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#1a73e8",
                    "name": "Primary"
                },
                {
                    "slug": "primary-dark",
                    "color": "#1557b0",
                    "name": "Primary Dark"
                },
                {
                    "slug": "secondary",
                    "color": "#ff6b35",
                    "name": "Secondary"
                },
                {
                    "slug": "accent",
                    "color": "#10b981",
                    "name": "Accent"
                },
                {
                    "slug": "background",
                    "color": "#f9fafb",
                    "name": "Background"
                },
                {
                    "slug": "surface",
                    "color": "#ffffff",
                    "name": "Surface"
                },
                {
                    "slug": "text",
                    "color": "#1f2937",
                    "name": "Text"
                },
                {
                    "slug": "text-light",
                    "color": "#6b7280",
                    "name": "Text Light"
                }
            ],
            "defaultPalette": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', sans-serif",
                    "slug": "inter",
                    "name": "Inter"
                },
                {
                    "fontFamily": "'Playfair Display', serif",
                    "slug": "playfair",
                    "name": "Playfair Display"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.85rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.2rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.6rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "huge",
                    "size": "2.4rem",
                    "name": "Huge"
                }
            ]
        },
        "spacing": {
            "units": ["px", "em", "rem", "%", "vw", "vh"]
        },
        "layout": {
            "contentSize": "760px",
            "wideSize": "1200px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            }
        }
    }
}
